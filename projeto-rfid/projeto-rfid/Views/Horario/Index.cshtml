@model List<HorarioViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="titulo" style="display:flex; align-items:center; justify-content:center">
    <h1 style="color: #0168B3">Lista de Horários</h1>
</div>

<div class="conteudo" style="display:flex; align-items:center; justify-content:center; width:100%; margin-top:10px">
    <div class="conteudo-2">
        <a href="/horario/Create">Cadastrar novo Horario</a>
        <table class="table table-responsive table-hover">
            <tr style="color: #0168B3">
                <th>Ações</th>
                <th>Id</th>
                <th>Horario</th>
            </tr>
            @foreach (var horario in Model)
            {
                <tr>
                    <td>
                        <a href="/horario/Edit?id=@horario.id">Editar</a>
                        <a href="javascript:apagarHorario(@horario.id)">Excluir</a>
                    </td>
                    <td>@horario.id</td>
                    <td>@horario.horario_aula</td>
                </tr>
            }
        </table>

        <script>
            function apagarHorario(id) {
                if (confirm('Confirma a exclusão do registro?'))
                    location.href = '/horario/delete?id=' + id;
            }
        </script>

    </div>
</div>


